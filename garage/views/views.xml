<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Definicion de Menús -->
    <record id="garage.aparcamiento_action_window" model="ir.actions.act_window">
      <field name="name">Aparcamientos</field>
      <field name="res_model">garage.aparcamiento</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="garage.coche_action_window" model="ir.actions.act_window">
      <field name="name">Coches</field>
      <field name="res_model">garage.coche</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="garage.mantenimiento_action_window" model="ir.actions.act_window">
      <field name="name">Mantenimientos</field>
      <field name="res_model">garage.mantenimiento</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menú item -->
    <menuitem id="garage" id="garage.menu_root" />

    <!-- Menú Categoria -->
    <menuitem name="Aparcamientos" id="garage.aparcamiento_menu" parent="garage.menu_root" action="garage.aparcamiento_action_window"/>
    <menuitem name="Coches" id="garage.aparcamiento_menu" parent="garage.menu_root" action="garage.coche_action_window"/>
    <menuitem name="Mantenimientos" id="garage.aparcamiento_menu" parent="garage.menu_root" action="garage.mantenimiento_action_window"/>


  </data>
</odoo>